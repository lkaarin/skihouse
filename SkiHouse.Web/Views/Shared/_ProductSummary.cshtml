@model Product
<div class="card" style="width:250px">
    <div class="card-body">
        <h5 class="card-title">@Model.Name </h5>
        <h6 class="card-subtitle mb-2 text-muted">@Model.Price.ToString("c")</h6>

        <form id="@Model.ProductId" asp-action="AddToCart" asp-controller="Cart" method="post">
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text">
                @Model.Description
                <button type="submit" class="btn btn-success btn-sm float-sm-right">Add to Cart</button>
            </span>

        </form>
    </div>
</div>